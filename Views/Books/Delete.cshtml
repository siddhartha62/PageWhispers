@model BookHive.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold text-white" style="font-family: 'Merriweather', serif; font-size: 2.5rem;">
        <i class="bi bi-book-fill me-2 text-teal-500"></i>Delete Book
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center animate__animated animate__fadeIn" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center animate__animated animate__fadeIn" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-lg border-0 rounded-3 animate__animated animate__fadeIn" style="background: #1e293b;">
        <div class="card-header rounded-top-3 text-white py-4" style="background: linear-gradient(90deg, #312e81, #14b8a6);">
            <h3 class="mb-0 fw-semibold text-center"><i class="bi bi-trash-fill me-2"></i>Confirm Deletion</h3>
        </div>
        <div class="card-body p-5 text-white">
            <h4 class="text-center mb-4 text-gray-200">Are you sure you want to delete this book?</h4>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="bg-gray-700 p-3 rounded-lg shadow-sm">
                        <dt class="fw-semibold text-teal-400"><i class="bi bi-book me-2"></i>Title</dt>
                        <dd class="text-gray-200">@Model.Title</dd>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="bg-gray-700 p-3 rounded-lg shadow-sm">
                        <dt class="fw-semibold text-teal-400"><i class="bi bi-person me-2"></i>Author</dt>
                        <dd class="text-gray-200">@Model.Author</dd>
                    </div>
                </div>
                <div class="col-12">
                    <div class="bg-gray-700 p-3 rounded-lg shadow-sm">
                        <dt class="fw-semibold text-teal-400"><i class="bi bi-text-paragraph me-2"></i>Description</dt>
                        <dd class="text-gray-200">@Model.Description</dd>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="bg-gray-700 p-3 rounded-lg shadow-sm">
                        <dt class="fw-semibold text-teal-400"><i class="bi bi-currency-dollar me-2"></i>Price</dt>
                        <dd class="text-gray-200">$@Model.Price</dd>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="bg-gray-700 p-3 rounded-lg shadow-sm">
                        <dt class="fw-semibold text-teal-400"><i class="bi bi-123 me-2"></i>Quantity</dt>
                        <dd class="text-gray-200">@Model.Quantity</dd>
                    </div>
                </div>
                <div class="col-12">
                    <div class="accordion" id="coverImageAccordion">
                        <div class="accordion-item bg-transparent border-0">
                            <h2 class="accordion-header" id="headingImage">
                                <button class="accordion-button collapsed bg-gray-700 text-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseImage" aria-expanded="false" aria-controls="collapseImage">
                                    <i class="bi bi-eye-fill me-2"></i>View Cover Image
                                </button>
                            </h2>
                            <div id="collapseImage" class="accordion-collapse collapse" aria-labelledby="headingImage" data-bs-parent="#coverImageAccordion">
                                <div class="accordion-body text-center">
                                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                                    {
                                        <img src="@Model.CoverImageUrl" alt="@Model.Title" class="rounded border border-teal-500 shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-gray-600 rounded-lg p-4">
                                            <p class="text-gray-400"><i class="bi bi-image me-2"></i>No Image</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form asp-action="Delete" method="post" class="mt-6 text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger rounded-pill px-4 py-2 shadow-lg hover:bg-red-700 transition-transform duration-300 transform hover:scale-105">
                    <i class="bi bi-trash-fill me-2"></i>Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 py-2 shadow-lg hover:bg-gray-600 transition-transform duration-300 transform hover:scale-105 ml-3">
                    <i class="bi bi-x-circle-fill me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .text-teal-400 {
            color: #2dd4bf;
        }

        .text-teal-500 {
            color: #14b8a6;
        }

        .border-teal-500 {
            border-color: #14b8a6;
        }

        .animate__fadeIn {
            animation-duration: 1s;
        }

        .accordion-button {
            color: white !important;
            background-color: #374151 !important;
        }

            .accordion-button:not(.collapsed) {
                color: #14b8a6 !important;
                background-color: #4b5563 !important;
            }

            .accordion-button:focus {
                box-shadow: none;
                border-color: rgba(0, 0, 0, 0.125);
            }
    </style>
}