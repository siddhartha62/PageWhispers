@model BookHive.Models.BookViewModel

@{
    ViewData["Title"] = "Create Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Explicitly include Bootstrap and Bootstrap Icons for testing -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold text-primary" style="font-family: 'Merriweather', serif; font-size: 2.5rem;">
        <i class="bi bi-book-fill me-2"></i>Create a New Book
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow border-primary border-opacity-25 rounded-3 mx-auto" style="max-width: 700px; background: #ffffff;">
        <div class="card-header rounded-top-3" style="background: linear-gradient(90deg, #0d6efd, #6610f2); color: white;">
            <h3 class="mb-0 fw-semibold"><i class="bi bi-book-half me-2"></i>Book Details</h3>
        </div>
        <div class="card-body p-5">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="mb-4 alert alert-danger d-none" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <span class="validation-summary-errors"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Title" class="form-label fw-semibold text-muted">
                        <i class="bi bi-book me-1"></i>Title
                    </label>
                    <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Title" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Author" class="form-label fw-semibold text-muted">
                        <i class="bi bi-person me-1"></i>Author
                    </label>
                    <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                    <span asp-validation-for="Author" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-semibold text-muted">
                        <i class="bi bi-text-paragraph me-1"></i>Description (Optional)
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter book description"></textarea>
                    <span asp-validation-for="Description" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Price" class="form-label fw-semibold text-muted">
                        <i class="bi bi-currency-dollar me-1"></i>Price
                    </label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price (e.g., 10.99)" />
                    <span asp-validation-for="Price" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Quantity" class="form-label fw-semibold text-muted">
                        <i class="bi bi-123 me-1"></i>Quantity
                    </label>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity (e.g., 5)" />
                    <span asp-validation-for="Quantity" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="CoverImage" class="form-label fw-semibold text-muted">
                        <i class="bi bi-image-fill me-1"></i>Cover Image
                    </label>
                    <input asp-for="CoverImage" type="file" class="form-control" />
                    <span asp-validation-for="CoverImage" class="text-danger d-block mt-1"></span>
                </div>

                <div class="text-center d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">
                        <i class="bi bi-plus-circle-fill me-2"></i>Create Book
                    </button>
                    <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 py-2">
                        <i class="bi bi-x-circle-fill me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .form-control:focus,
        .form-control[type="file"]:focus {
            box-shadow: 0 0 10px rgba(13, 110, 253, 0.3);
            border-color: #0d6efd;
            transition: all 0.3s ease;
        }

        .btn-primary:hover,
        .btn-secondary:hover {
            transform: scale(1.05);
            transition: transform 0.2s;
        }
    </style>
    <script>
        // Ensure validation summary is visible when there are errors
        document.addEventListener('DOMContentLoaded', () => {
            const validationSummary = document.querySelector('.validation-summary-errors');
            const alert = validationSummary?.closest('.alert');
            if (validationSummary && validationSummary.children.length > 0) {
                alert.classList.remove('d-none');
                alert.querySelector('span').innerHTML = validationSummary.innerHTML;
            }
        });
    </script>
}