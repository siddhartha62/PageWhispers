@model BookHive.Models.TimedDiscountViewModel

@{
    ViewData["Title"] = "Manage Discounts";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-center text-amber-900 mb-6">Manage Discounts for @Model.BookTitle</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 text-green-700 p-2 rounded mb-4 text-center text-sm">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 text-red-700 p-2 rounded mb-4 text-center text-sm">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-amber-50 rounded-lg shadow-md p-6 max-w-lg mx-auto">
        <form asp-action="ManageDiscounts" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" asp-for="BookTitle" />

            <div class="mb-4">
                <label asp-for="DiscountPercentage" class="block text-gray-700 text-sm font-semibold mb-2">Discount Percentage (%)</label>
                <input asp-for="DiscountPercentage" type="number" step="0.01" class="w-full p-1.5 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" />
                <span asp-validation-for="DiscountPercentage" class="text-red-600 text-sm"></span>
                <p class="text-gray-500 text-xs mt-1">Enter 0 to remove the discount.</p>
            </div>

            <div class="mb-4">
                <label asp-for="StartDate" class="block text-gray-700 text-sm font-semibold mb-2">Start Date (UTC)</label>
                <input asp-for="StartDate" type="datetime-local" class="w-full p-1.5 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" />
                <span asp-validation-for="StartDate" class="text-red-600 text-sm"></span>
                <p class="text-gray-500 text-xs mt-1">Enter the date and time in UTC.</p>
            </div>

            <div class="mb-4">
                <label asp-for="ExpiresAt" class="block text-gray-700 text-sm font-semibold mb-2">Expires At (UTC)</label>
                <input asp-for="ExpiresAt" type="datetime-local" class="w-full p-1.5 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" />
                <span asp-validation-for="ExpiresAt" class="text-red-600 text-sm"></span>
                <p class="text-gray-500 text-xs mt-1">Enter the date and time in UTC.</p>
            </div>

            <div class="mb-4">
                <label asp-for="OnSaleFlag" class="flex items-center">
                    <input asp-for="OnSaleFlag" type="checkbox" class="mr-2" />
                    <span class="text-gray-700 text-sm font-semibold">Show "On Sale" Flag</span>
                </label>
                <span asp-validation-for="OnSaleFlag" class="text-red-600 text-sm"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="inline-block bg-amber-600 text-white font-medium text-sm py-1.5 px-3 rounded hover:bg-amber-700">Save Discount</button>
                <a asp-action="Details" asp-route-id="@Model.BookId" class="inline-block bg-gray-500 text-white font-medium text-sm py-1.5 px-3 rounded hover:bg-gray-600 ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}