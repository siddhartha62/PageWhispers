@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-center text-amber-900 mb-6">Access Denied</h2>
    <div class="bg-amber-50 rounded-lg shadow-md p-6 max-w-lg mx-auto text-center">
        <p class="text-gray-600 text-sm mb-4">You do not have permission to access this page. You need to be a registered member to place an order.</p>
        <p class="text-gray-600 text-sm mb-4">If you are not a member, please register or log in with a member account.</p>
        <div class="flex justify-center gap-4">
            <a asp-controller="Account" asp-action="Register" class="inline-block bg-amber-600 text-white font-medium text-sm py-1.5 px-3 rounded hover:bg-amber-700">Register</a>
            <a asp-controller="Account" asp-action="Login" class="inline-block bg-gray-500 text-white font-medium text-sm py-1.5 px-3 rounded hover:bg-gray-600">Login</a>
        </div>
    </div>
</div>