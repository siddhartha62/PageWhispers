@model BookHive.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-3 animate__animated animate__fadeIn" style="background: #1e293b; max-width: 500px; width: 100%;">
        <div class="card-header rounded-top-3 text-white py-4" style="background: linear-gradient(90deg, #312e81, #14b8a6);">
            <h2 class="mb-0 fw-bold text-center" style="font-family: 'Merriweather', serif; font-size: 2rem;">
                <i class="bi bi-box-arrow-in-right me-2 text-teal-500"></i>Login to Page Whispers
            </h2>
        </div>
        <div class="card-body p-5 text-white">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-red-400 mb-4 text-center alert alert-danger d-none" role="alert">
                    <span class="validation-summary-errors"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-semibold text-teal-400">
                        <i class="bi bi-envelope-fill me-2"></i>Email
                    </label>
                    <input asp-for="Email" class="form-control bg-gray-700 text-white border-gray-600 focus:ring-teal-500 focus:border-teal-500" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-red-400 d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label fw-semibold text-teal-400">
                        <i class="bi bi-lock-fill me-2"></i>Password
                    </label>
                    <input asp-for="Password" class="form-control bg-gray-700 text-white border-gray-600 focus:ring-teal-500 focus:border-teal-500" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-400 d-block mt-1"></span>
                </div>

                <div class="mb-4 d-flex align-items-center">
                    <input asp-for="RememberMe" class="form-check-input h-4 w-4 text-teal-500 focus:ring-teal-500 border-gray-600 rounded" />
                    <label asp-for="RememberMe" class="form-check-label ms-2 text-gray-200">Remember Me</label>
                </div>

                <button type="submit" class="w-full btn btn-teal-500 text-white rounded-pill py-3 shadow-lg hover:bg-teal-600 transition-transform duration-300 transform hover:scale-105">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </button>

                <div class="mt-4 text-center">
                    <a href="/Account/Register" class="text-teal-400 hover:text-teal-300 transition-colors duration-300 hover:underline">
                        <i class="bi bi-person-plus-fill me-2"></i>Don't have an account? Register here
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .btn-teal-500 {
            background-color: #14b8a6;
        }

            .btn-teal-500:hover {
                background-color: #15d1bb;
            }

        .text-teal-400 {
            color: #2dd4bf;
        }

        .text-teal-300 {
            color: #4dd0e1;
        }

        .text-teal-500 {
            color: #14b8a6;
        }

        .animate__fadeIn {
            animation-duration: 1s;
        }
    </style>
    <script>
        // Ensure validation summary is visible when there are errors
        document.addEventListener('DOMContentLoaded', () => {
            const validationSummary = document.querySelector('.validation-summary-errors');
            const alert = validationSummary?.closest('.alert');
            if (validationSummary && validationSummary.children.length > 0) {
                alert.classList.remove('d-none');
                alert.querySelector('span').innerHTML = validationSummary.innerHTML;
            }
        });
    </script>
}