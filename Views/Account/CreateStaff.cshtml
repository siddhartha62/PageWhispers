@model BookHive.Models.CreateStaffViewModel

@{
    ViewData["Title"] = "Create Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Explicitly include Bootstrap and Bootstrap Icons for testing -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold text-primary" style="font-family: 'Merriweather', serif; font-size: 2.5rem;">
        <i class="bi bi-person-plus-fill me-2"></i>Create Staff
    </h2>

    <div class="card shadow border-primary border-opacity-25 rounded-3 mx-auto" style="max-width: 700px; background: #ffffff;">
        <div class="card-header rounded-top-3" style="background: linear-gradient(90deg, #0d6efd, #6610f2); color: white;">
            <h3 class="mb-0 fw-semibold"><i class="bi bi-person-lines-fill me-2"></i>Staff Details</h3>
        </div>
        <div class="card-body p-5">
            <form asp-action="CreateStaff" method="post">
                <div asp-validation-summary="All" class="mb-4 alert alert-danger d-none" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <span class="validation-summary-errors"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="FirstName" class="form-label fw-semibold text-muted">
                        <i class="bi bi-person me-1"></i>First Name
                    </label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                    <span asp-validation-for="FirstName" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="LastName" class="form-label fw-semibold text-muted">
                        <i class="bi bi-person me-1"></i>Last Name
                    </label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="LastName" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-semibold text-muted">
                        <i class="bi bi-envelope-fill me-1"></i>Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="TemporaryPassword" class="form-label fw-semibold text-muted">
                        <i class="bi bi-key-fill me-1"></i>Temporary Password
                    </label>
                    <input asp-for="TemporaryPassword" class="form-control" placeholder="Enter temporary password" />
                    <span asp-validation-for="TemporaryPassword" class="text-danger d-block mt-1"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary rounded-pill px-5 py-2">
                        <i class="bi bi-person-check-fill me-2"></i>Create Staff
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .form-control:focus {
            box-shadow: 0 0 10px rgba(13, 110, 253, 0.3);
            border-color: #0d6efd;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: scale(1.05);
            transition: transform 0.2s;
        }
    </style>
    <script>
        // Ensure validation summary is visible when there are errors
        document.addEventListener('DOMContentLoaded', () => {
            const validationSummary = document.querySelector('.validation-summary-errors');
            const alert = validationSummary?.closest('.alert');
            if (validationSummary && validationSummary.children.length > 0) {
                alert.classList.remove('d-none');
                alert.querySelector('span').innerHTML = validationSummary.innerHTML;
            }
        });
    </script>
}