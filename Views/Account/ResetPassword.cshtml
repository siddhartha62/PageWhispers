@model BookHive.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-3 animate__animated animate__fadeIn" style="background: #1e293b; max-width: 500px; width: 100%;">
        <div class="card-header rounded-top-3 text-white py-4" style="background: linear-gradient(90deg, #312e81, #14b8a6);">
            <h2 class="mb-0 fw-bold text-center" style="font-family: 'Merriweather', serif; font-size: 2rem;">
                <i class="bi bi-key-fill me-2 text-teal-500"></i>Reset Password
            </h2>
        </div>
        <div class="card-body p-5 text-white">
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />

                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-semibold text-teal-400">
                        <i class="bi bi-envelope-fill me-2"></i>Email
                    </label>
                    <input asp-for="Email" class="form-control bg-gray-700 text-white border-gray-600 focus:ring-teal-500 focus:border-teal-500" required />
                    <span asp-validation-for="Email" class="text-red-400 d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label fw-semibold text-teal-400">
                        <i class="bi bi-lock-fill me-2"></i>New Password
                    </label>
                    <input asp-for="Password" type="password" class="form-control bg-gray-700 text-white border-gray-600 focus:ring-teal-500 focus:border-teal-500" required />
                    <span asp-validation-for="Password" class="text-red-400 d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold text-teal-400">
                        <i class="bi bi-lock-fill me-2"></i>Confirm Password
                    </label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control bg-gray-700 text-white border-gray-600 focus:ring-teal-500 focus:border-teal-500" required />
                    <span asp-validation-for="ConfirmPassword" class="text-red-400 d-block mt-1"></span>
                </div>

                <div class="d-flex justify-end gap-3">
                    <a href="/Account/Login" class="btn btn-secondary rounded-pill px-4 py-2 shadow-lg hover:bg-gray-600 transition-transform duration-300 transform hover:scale-105">
                        <i class="bi bi-x-circle-fill me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-teal-500 text-white rounded-pill px-4 py-2 shadow-lg hover:bg-teal-600 transition-transform duration-300 transform hover:scale-105">
                        <i class="bi bi-check-circle-fill me-2"></i>Reset Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .btn-teal-500 {
            background-color: #14b8a6;
        }

            .btn-teal-500:hover {
                background-color: #15d1bb;
            }

        .text-teal-400 {
            color: #2dd4bf;
        }

        .text-teal-500 {
            color: #14b8a6;
        }

        .animate__fadeIn {
            animation-duration: 1s;
        }
    </style>
}