@model IEnumerable<BookHive.Models.TimedAnnouncement>

@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Explicitly include Bootstrap and Bootstrap Icons for testing -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold text-primary" style="font-family: 'Merriweather', serif; font-size: 2.5rem;">
        <i class="bi bi-megaphone-fill me-2"></i>Announcements
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="text-center mb-5">
            <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2">
                <i class="bi bi-plus-circle-fill me-2"></i>Create New Announcement
            </a>
        </div>
    }

    @if (!Model.Any())
    {
        <p class="text-center text-muted"><i class="bi bi-info-circle me-2"></i>No active announcements.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var announcement in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0" style="transition: transform 0.2s;">
                        <div class="card-body p-4 d-flex flex-column">
                            <h3 class="card-title mb-2 text-dark fw-semibold">@announcement.Title</h3>
                            <p class="text-muted text-sm mb-2 flex-grow">@announcement.Message</p>
                            <p class="text-muted text-xs mb-1"><i class="bi bi-calendar-date me-1"></i>Created: @announcement.CreatedAt.ToString("d MMM yyyy HH:mm")</p>
                            <p class="text-muted text-xs mb-1"><i class="bi bi-play-circle me-1"></i>Starts: @announcement.StartDate.ToString("d MMM yyyy HH:mm")</p>
                            <p class="text-muted text-xs mb-3"><i class="bi bi-stop-circle me-1"></i>Expires: @announcement.ExpiresAt.ToString("d MMM yyyy HH:mm")</p>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@announcement.Id" class="btn btn-primary btn-sm rounded-pill flex-1">
                                        <i class="bi bi-pencil-fill me-1"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@announcement.Id" class="btn btn-danger btn-sm rounded-pill flex-1">
                                        <i class="bi bi-trash-fill me-1"></i>Delete
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <style>
        .card:hover {
            transform: scale(1.03);
            transition: transform 0.2s;
        }

        .btn-primary:hover,
        .btn-danger:hover {
            transform: scale(1.05);
            transition: transform 0.2s;
        }
    </style>
}