@model BookHive.Models.TimedAnnouncement

@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-center text-amber-900 mb-6">Delete Announcement</h2>

    <div class="bg-amber-50 rounded-lg shadow-md p-6 max-w-lg mx-auto">
        <h3 class="text-lg font-semibold text-amber-800 mb-4">Are you sure you want to delete this announcement?</h3>
        <div class="mb-4">
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Message:</strong> @Model.Message</p>
            <p><strong>Created:</strong> @Model.CreatedAt.ToString("d MMM yyyy HH:mm")</p>
            <p><strong>Starts:</strong> @Model.StartDate.ToString("d MMM yyyy HH:mm")</p>
            <p><strong>Expires:</strong> @Model.ExpiresAt.ToString("d MMM yyyy HH:mm")</p>
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <button type="submit" class="inline-block bg-red-600 text-white font-medium text-sm py-1.5 px-3 rounded hover:bg-red-700">Delete</button>
                <a asp-action="Index" class="inline-block bg-gray-500 text-white font-medium text-sm py-1.5 px-3 rounded hover:bg-gray-600 ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>