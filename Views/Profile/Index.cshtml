@model BookHive.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-amber-900 mb-6 text-center">Your Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 text-green-700 p-4 rounded-lg mb-4 text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-4 text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-amber-50 rounded-lg shadow-md p-6 max-w-lg mx-auto">
        <div class="text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" alt="@Model.UserName" class="w-32 h-32 object-cover rounded-full mx-auto" />
            }
            else
            {
                <div class="w-32 h-32 bg-gray-200 flex items-center justify-center rounded-full mx-auto">
                    <span class="text-gray-600">No Image</span>
                </div>
            }
        </div>
        <dl class="grid grid-cols-1 gap-4">
            <dt class="text-gray-700 font-semibold">Username</dt>
            <dd class="text-gray-600">@Model.UserName</dd>
            <dt class="text-gray-700 font-semibold">Email</dt>
            <dd class="text-gray-600">@Model.Email</dd>
            <dt class="text-gray-700 font-semibold">First Name</dt>
            <dd class="text-gray-600">@(Model.FirstName ?? "Not set")</dd>
            <dt class="text-gray-700 font-semibold">Last Name</dt>
            <dd class="text-gray-600">@(Model.LastName ?? "Not set")</dd>
        </dl>
        <div class="mt-6 flex justify-center gap-3">
            <a asp-controller="Profile" asp-action="Edit" class="inline-block bg-amber-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-amber-700">Edit Profile</a>
            <a asp-controller="Profile" asp-action="ChangePassword" class="inline-block bg-amber-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-amber-700">Change Password</a>
        </div>
    </div>
</div>