@model BookHive.Models.HomeViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<BookHive.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Explicitly include Bootstrap and Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<!-- Hero Banner -->
<div class="position-relative min-vh-100 d-flex align-items-center text-white" style="background: linear-gradient(rgba(0, 20, 40, 0.9), rgba(0, 20, 40, 0.9)), url('https://www.transparenttextures.com/patterns/dark-mosaic.png'); background-size: cover; background-position: center;">
    <div class="container position-relative z-10">
        <div class="row align-items-center">
            <!-- Left Side: Call to Action -->
            <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
                <h1 class="display-4 fw-bold mb-4" style="font-family: 'Merriweather', serif; color: #00d4ff;">
                    <i class="bi bi-lightning-charge-fill me-2 text-warning"></i>Welcome to Page Whispers
                </h1>
                <p class="lead mb-5 text-light">Unleash the Power of Stories – Find Your Next Adventure!</p>
                <a asp-controller="Books" asp-action="Index" class="btn btn-warning rounded-pill px-5 py-3 shadow-lg">
                    <i class="bi bi-rocket-takeoff-fill me-2"></i>Dive Into Books
                </a>
            </div>
            <!-- Right Side: Featured On-Sale Book -->
            @{
                var featuredOnSaleBook = Model.Books.Where(b => b.OnSaleFlag).OrderBy(b => Guid.NewGuid()).FirstOrDefault();
                if (featuredOnSaleBook != null)
                {
                    var book = featuredOnSaleBook.Book;
                    <div class="col-md-6 text-center">
                        <div class="card bg-dark border-warning border-opacity-50 rounded-3 shadow-lg p-4 animate__animated animate__fadeInRight">
                            <span class="position-absolute top-0 end-0 bg-warning text-dark text-xs fw-bold px-2 py-1 rounded-start">Featured Deal</span>
                            @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                            {
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                    <img src="@book.CoverImageUrl" alt="@book.Title" class="rounded mb-3 mx-auto" style="max-width: 200px; height: 300px; object-fit: cover;" />
                                </a>
                            }
                            else
                            {
                                <div class="bg-secondary rounded mb-3 mx-auto d-flex align-items-center justify-content-center" style="width: 200px; height: 300px;">
                                    <span class="text-muted text-sm">No Image</span>
                                </div>
                            }
                            <h4 class="text-white fw-semibold mb-2">@book.Title</h4>
                            <p class="text-light text-sm mb-2"><i class="bi bi-person me-1 text-warning"></i>by @book.Author</p>
                            @if (featuredOnSaleBook.IsDiscountActive)
                            {
                                <p class="text-light text-sm mb-2">
                                    <span class="text-decoration-line-through">$@book.Price</span>
                                    <span class="text-success ms-2">$@featuredOnSaleBook.DiscountedPrice</span>
                                </p>
                            }
                            else
                            {
                                <p class="text-light text-sm mb-2"><i class="bi bi-currency-dollar me-1 text-warning"></i>$@book.Price</p>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid py-5" style="background: #001428;">
    <!-- On Sale Books Carousel -->
    <div class="mb-5">
        <h3 class="text-center mb-4 text-warning fw-semibold"><i class="bi bi-lightning-fill me-2"></i>On Sale Now!</h3>
        @{
            var onSaleBooks = Model.Books.Where(b => b.OnSaleFlag).ToList();
            if (onSaleBooks.Any())
            {
                <div id="onSaleCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < onSaleBooks.Count; i++)
                        {
                            var item = onSaleBooks[i];
                            var book = item.Book;
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="d-flex justify-content-center">
                                    <div class="card bg-dark border-warning border-opacity-50 rounded-3 shadow-lg p-4 animate__animated animate__fadeIn" style="max-width: 300px;">
                                        <span class="position-absolute top-0 end-0 bg-warning text-dark text-xs fw-bold px-2 py-1 rounded-start">On Sale</span>
                                        @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                                        {
                                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                                <img src="@book.CoverImageUrl" alt="@book.Title" class="card-img-top rounded mb-3" style="height: 250px; object-fit: cover;" />
                                            </a>
                                        }
                                        else
                                        {
                                            <div class="card-img-top rounded mb-3 bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                                                <span class="text-muted text-sm">No Image</span>
                                            </div>
                                        }
                                        <div class="card-body p-0 text-center">
                                            <h4 class="text-white fw-semibold mb-2">@book.Title</h4>
                                            <p class="text-light text-sm mb-2"><i class="bi bi-person me-1 text-warning"></i>by @book.Author</p>
                                            @if (item.IsDiscountActive)
                                            {
                                                <p class="text-light text-sm mb-2">
                                                    <span class="text-decoration-line-through">$@book.Price</span>
                                                    <span class="text-success ms-2">$@item.DiscountedPrice</span>
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="text-light text-sm mb-2"><i class="bi bi-currency-dollar me-1 text-warning"></i>$@book.Price</p>
                                            }
                                            <p class="text-light text-xs mb-2 line-clamp-2">@book.Description</p>
                                            <p class="text-light text-xs"><i class="bi bi-calendar-date me-1 text-warning"></i>Added: @book.AddedDate.ToString("d MMM yy")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#onSaleCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#onSaleCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <p class="text-center text-light"><i class="bi bi-info-circle me-2 text-warning"></i>No books on sale right now. Check back later!</p>
            }
        }
    </div>

    <!-- Featured Books Masonry Grid -->
    <div id="featured-books">
        <h3 class="text-center mb-4 text-warning fw-semibold"><i class="bi bi-fire me-2"></i>Featured Books</h3>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" style="column-gap: 1rem;">
            @foreach (var item in Model.Books.OrderBy(b => Guid.NewGuid()).Take(6)) // Randomize and limit to 6 for grid
            {
                var book = item.Book;
                <div class="col">
                    <div class="card bg-dark border-0 shadow-lg rounded-3 animate__animated animate__fadeIn" style="transition: transform 0.2s;">
                        @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                        {
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                <img src="@book.CoverImageUrl" alt="@book.Title" class="card-img-top rounded-top" style="height: 300px; object-fit: cover;" />
                            </a>
                        }
                        else
                        {
                            <div class="card-img-top rounded-top bg-secondary d-flex align-items-center justify-content-center" style="height: 300px;">
                                <span class="text-muted text-sm">No Image</span>
                            </div>
                        }
                        <div class="card-body p-4">
                            <h4 class="card-title mb-2 text-white fw-semibold">@book.Title</h4>
                            <p class="text-light text-sm mb-2"><i class="bi bi-person me-1 text-warning"></i>by @book.Author</p>
                            @if (item.IsDiscountActive)
                            {
                                <p class="text-light text-sm mb-2">
                                    <span class="text-decoration-line-through">$@book.Price</span>
                                    <span class="text-success ms-2">$@item.DiscountedPrice</span>
                                </p>
                            }
                            else
                            {
                                <p class="text-light text-sm mb-2"><i class="bi bi-currency-dollar me-1 text-warning"></i>$@book.Price</p>
                            }
                            <p class="text-light text-sm mb-2 line-clamp-2">@book.Description</p>
                            <p class="text-light text-xs"><i class="bi bi-calendar-date me-1 text-warning"></i>Added: @book.AddedDate.ToString("d MMM yy")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card:hover {
            transform: translateY(-5px);
            transition: transform 0.3s;
        }

        .btn-warning:hover {
            transform: scale(1.05);
            transition: transform 0.2s;
            background-color: #f1c40f;
        }

        .carousel-control-prev,
        .carousel-control-next {
            background: rgba(0, 0, 0, 0.5);
            width: 5%;
        }

            .carousel-control-prev:hover,
            .carousel-control-next:hover {
                background: rgba(0, 0, 0, 0.8);
            }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .animate__fadeIn,
        .animate__fadeInRight {
            animation-duration: 1s;
        }
    </style>
    <script>
        // JavaScript for carousel (Bootstrap handles it via data attributes)
        // No additional JavaScript needed for the carousel since Bootstrap's carousel is used
    </script>
}